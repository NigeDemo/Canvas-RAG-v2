# Canvas LMS Configuration
CANVAS_API_URL=https://canvas.instructure.com
CANVAS_API_TOKEN=your_canvas_api_token_here
CANVAS_COURSE_ID=45166

# Multi-Content Pipeline Configuration
# Comma-separated list of Canvas page URL slugs (used by run_multi_page_pipeline.py)
# Example: CANVAS_MULTI_PAGE_URLS=home-page,construction-drawing-package-2
CANVAS_MULTI_PAGE_URLS=home-page,construction-drawing-package-2

# Comma-separated list of Canvas assignment IDs to ingest (optional)
# Example: CANVAS_ASSIGNMENT_IDS=304961,304962
# The syllabus is typically an assignment (e.g., ID 304961 is "Portfolio")
CANVAS_ASSIGNMENT_IDS=304961

# Set to 'true' to ingest all course modules with their embedded content (optional)
# This will recursively process all module items including embedded pages
CANVAS_INGEST_MODULES=true

# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4-vision-preview
OPENAI_VISION_MODEL=gpt-4o

# Anthropic Configuration (for Claude Vision)
ANTHROPIC_API_KEY=your_anthropic_api_key_here
CLAUDE_VISION_MODEL=claude-3-5-sonnet-20241022

# Vision AI Configuration
VISION_PRIMARY_PROVIDER=openai
VISION_FALLBACK_PROVIDER=claude
VISION_CACHE_ENABLED=true
VISION_CACHE_TTL_HOURS=24

# Google Gemini Configuration (optional)
GOOGLE_API_KEY=your_google_api_key_here
GEMINI_MODEL=gemini-pro-vision

# Nomic Embed Configuration (optional)
NOMIC_API_KEY=your_nomic_api_key_here

# ChromaDB Configuration
CHROMA_PERSIST_DIRECTORY=./data/chroma_db
CHROMA_COLLECTION_NAME=canvas_multimodal

# Retrieval Configuration
DENSE_RETRIEVAL_TOP_K=10
SPARSE_RETRIEVAL_TOP_K=10
HYBRID_FUSION_ALPHA=0.5
RERANK_TOP_K=5

# Query Enhancement Configuration
ENABLE_QUERY_ENHANCEMENT=true
QUERY_ENHANCEMENT_MAX_TERMS=10
QUERY_ENHANCEMENT_DEBUG=true

# Processing Configuration
PDF_DPI=200
MAX_IMAGE_SIZE=1024
CHUNK_SIZE=512
CHUNK_OVERLAP=50

# UI Configuration
STREAMLIT_PORT=8501
DEBUG_MODE=true

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=./logs/canvas_rag.log
